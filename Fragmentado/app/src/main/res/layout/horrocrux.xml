<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="307dp"
        android:layout_height="63dp"
        android:text="Borrar"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtAlert"
        app:layout_constraintStart_toStartOf="@+id/txtAlert"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="304dp"
        android:layout_height="67dp"
        android:lines="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Â¿Estas seguro de eliminar el elemento?"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtAlert"
        app:layout_constraintStart_toStartOf="@+id/txtAlert"
        app:layout_constraintTop_toBottomOf="@+id/txtAlert" />

    <TextView
        android:id="@+id/txtAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="150dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="CUIDADO"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
